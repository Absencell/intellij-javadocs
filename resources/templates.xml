<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <class>
        <template regexp="^(public|protected|private)*.+interface\s+\w+.*">
            /**\n
            * The interface $name.\n
            */
        </template>
        <template regexp="^(public|protected|private)*.+enum\s+\w+.*">
            /**\n
            * The enum $name.\n
            */
        </template>
        <template regexp="^(public|protected|private)*.+class\s+\w+.*">
            /**\n
            * The type $name.\n
            */
        </template>
        <template regexp=".+">
            /**\n
            * The type $name.\n
            */
        </template>
    </class>

    <field>
        <template regexp="^(public|protected|private)*.+static.*(\w\s\w)+.+">
            /**\n
            * The constant $element.getName().\n
            */
        </template>
        <template regexp="^(public|protected|private)*.*(\w\s\w)+.+">
            /**\n
            * The $name.\n
            */
        </template>
        <template regexp=".+">
            /**\n
            * The $name.\n
            */
        </template>
    </field>

    <method>
        <template regexp="(public|protected|private)*\s*(void|\w)+\s+get\w+\(.*\)">
            /**\n
            * ${description}.\n
            * @return the ${return_by_name}\n
            */
        </template>
        <template regexp=".*void\s.+">
            /**\n
            * ${description}.\n
            */
        </template>
        <template regexp=".+">
            /**\n
            * ${description}.\n
            * @return the ${return_description}\n
            */
        </template>
    </method>

    <constructor>
        <template regexp=".+">
            /**\n
            * Instantiates a new ${description}.\n
            */
        </template>
    </constructor>

    <param-tag>
        <template regexp=".+">
            /**\n
            * @param ${name} the ${description}\n
            */
        </template>
    </param-tag>

    <throws-tag>
        <template regexp=".+">
            /**\n
            * @throws ${name} the ${description}\n
            */
        </template>
    </throws-tag>
</templates>
